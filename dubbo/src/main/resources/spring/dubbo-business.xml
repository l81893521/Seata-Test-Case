<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <dubbo:application name="dubbo-demo-business"/>
    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry address="multicast://224.5.6.7:1234?unicast=false"/>
    <!-- 生成远程服务代理 -->
    <dubbo:reference id="accountService" check="false" interface="com.seata.test.service.AccountService"/>
    <dubbo:reference id="orderService" check="false" interface="com.seata.test.service.OrderService"/>
    <dubbo:reference id="storageService" check="false" interface="com.seata.test.service.StorageService"/>

    <bean id="businessService" class="com.seata.test.service.impl.BusinessServiceImpl">
        <property name="accountService" ref="accountService"/>
        <property name="orderService" ref="orderService"/>
        <property name="storageService" ref="storageService"/>
    </bean>

    <bean class="io.seata.spring.annotation.GlobalTransactionScanner">
        <constructor-arg value="dubbo-demo-app"/>
        <constructor-arg value="my_test_tx_group"/>
    </bean>
</beans>